# Dockerfile для разработки Herzen Core с hot reload
FROM node:18-alpine

# Устанавливаем системные зависимости
RUN apk add --no-cache \
    python3 \
    py3-setuptools \
    make \
    g++ \
    cairo-dev \
    jpeg-dev \
    pango-dev \
    musl-dev \
    giflib-dev \
    pixman-dev \
    pangomm-dev \
    libjpeg-turbo-dev \
    freetype-dev

# Создаем пользователя для приложения
RUN addgroup -g 1001 -S nodejs
RUN adduser -S herzen -u 1001

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем package.json и package-lock.json
COPY package*.json ./

# Копируем исходный код
COPY . .

# Устанавливаем ВСЕ зависимости (включая dev) после копирования кода
RUN npm install && npm cache clean --force

# Удаляем и переустанавливаем bcrypt для правильной архитектуры
RUN npm uninstall bcrypt && npm install bcrypt

# Создаем необходимые директории
RUN mkdir -p data logs public/uploads

# Устанавливаем права доступа
RUN chown -R herzen:nodejs /app
USER herzen

# Открываем порт
EXPOSE 8118

# Создаем конфигурационный файл для разработки
RUN cat > config.yml << 'EOF'
# Herzen Development Configuration
mongo:
  uri: mongodb://mongo:27017/herzen

server:
  port: 8118
  host: 0.0.0.0

session:
  secret: herzen-dev-secret-key

email:
  enabled: false

redis:
  enabled: false

logging:
  level: debug
  file: logs/herzen.log
EOF

# Команда запуска с hot reload
CMD ["npm", "run", "webpackwatch"]
